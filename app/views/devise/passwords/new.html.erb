<%= render 'shared/userstyle' %>
<div class="site-wrapper">
	<div class="site-wrapper-inner">
        <div class="cover-container">

          <div class="inner cover">
	
				<h2><%= image_tag('blocks.png', :width => 43, :height => 43, :style => "margin:0px").to_s %> Forgot your password?</h2>

				<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class:"form-signin" }) do |f| %>
				  <%= devise_error_messages! %>
				  	<div><%= f.email_field :email, :autofocus => true, :placeholder => "Email Address", :class => "form-control" %></div>
					<br>
				  <%= f.submit "Email password reset instructions", class: "btn btn-primary", id: "submitbtn" %>
				<% end %>
				<br>
	        <p><%= render "devise/shared/links" %></p>
          </div>
        </div>
    </div>
</div>